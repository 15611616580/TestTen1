<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ye"
    >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/login"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:id="@+id/imageView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/login_userid"
        android:hint="请输入账号"
        android:gravity="center"
        android:textColorHint="#fff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:id="@+id/login_pass"
        android:hint="请输入密码"
        android:gravity="center"
        android:password="true"
        android:textColorHint="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zhuce"
        android:text="注册账号"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/login_pass"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:textColor="#fff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findpass"
        android:text="找回密码"
        android:layout_alignBaseline="@+id/zhuce"
        android:layout_alignBottom="@+id/zhuce"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:textColor="#fff"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/login_go"
        android:background="@color/colorTop"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/findpass"
        android:layout_centerHorizontal="true"
        android:text="登录"
        android:textSize="20dp"
        android:textColor="#fff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/login_go"
        android:layout_alignStart="@+id/zhuce"
        android:layout_marginStart="20dp"
        android:layout_marginTop="53dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_qq_login_normal"
            android:layout_marginLeft="80dp"
            android:id="@+id/qq"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/sj"
            android:layout_marginLeft="40dp"
            android:id="@+id/sj"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/weobo"
            android:layout_marginLeft="40dp"
            android:id="@+id/wb"
            />

    </LinearLayout>
</RelativeLayout>
